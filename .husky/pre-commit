# Run linting on staged files
echo "ğŸ” Running pre-commit checks..."
echo "  â†’ Linting staged files..."

# Get list of staged JavaScript files
# Note: This repo uses .js files only. Add other extensions (e.g., .ts, .jsx) if needed
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.js$' || true)

if [ -n "$STAGED_FILES" ]; then
  # Run ESLint on staged JavaScript files
  npx eslint $STAGED_FILES
  
  if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the errors before committing."
    echo "ğŸ’¡ Tip: Run 'npx eslint --fix $STAGED_FILES' to automatically fix some issues"
    exit 1
  fi
else
  echo "  â†’ No JavaScript files to lint"
fi

echo "âœ… Pre-commit checks passed!"
