{
  "name": "omnibot-tests",
  "version": "1.0.0",
  "description": "OmniBot test suite",
  "type": "module",
  "scripts": {
    "build": "node scripts/build-modular-worker.js",
    "test": "mocha tests/structure-*.test.js --timeout 10000",
    "test:structure": "mocha tests/structure-basic.test.js --grep 'Structure' --timeout 5000",
    "test:safety": "mocha tests/structure-basic.test.js --grep 'Safety' --timeout 5000",
    "test:e2e": "playwright test",
    "test:unit": "node --test tests/*.test.js", 
    "test:coverage": "node --test --experimental-test-coverage tests/*.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:worker": "eslint cloudflare-worker/src/",
    "complexity": "node scripts/analyze-complexity.js",
    "complexity:worker": "node scripts/analyze-complexity.js cloudflare-worker/src",
    "prepare": "husky"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "@playwright/test": "^1.57.0",
    "wrangler": "^4.54.0"
  }
}
